			</rollingPolicy>
			<encoder>
				<pattern>${PATTERN}</pattern>
			</encoder>
		</appender>
		<logger name="com.housecenter" level="INFO" />
		<root level="INFO">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="ROLLING-FILE" />
		</root>
	</springProfile>
</configuration>